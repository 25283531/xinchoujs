{
  "name": "hr-payroll",
  "version": "1.0.0",
  "description": "单机版薪酬管理系统",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron . --disable-gpu --disable-software-rasterizer",
    "dev": "npm run build && electron .",
    "build": "tsc -b tsconfig.main.json && tsc src/preload.ts --outDir build && npm run build:ui:esbuild",
    "build:main": "tsc -b tsconfig.main.json",
    "build:ui": "tsc -b tsconfig.ui.json",
    "build:ui:esbuild": "esbuild src/ui/index.tsx --bundle --outfile=build/ui.js --platform=browser --format=esm --external:sqlite3 --external:sqlite",

    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "keywords": [
    "payroll",
    "hr",
    "salary",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "exceljs": "^4.3.0",
    "pdfkit": "^0.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.25.0",
    "jest": "^29.2.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.8.0",
    "antd": "^5.0.0",
    "@ant-design/icons": "^5.0.0"
  }
}
