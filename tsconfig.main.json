{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "jsx": "react",
    "composite": true,
    "target": "ES2020",
    "downlevelIteration": true
  },
  "include": ["src/main.ts", "src/db/**/*", "src/services/**/*", "src/utils/**/*", "src/store/**/*", "src/config/**/*", "src/types/**/*"],
  "exclude": ["src/ui/**/*", "node_modules", "**/*.spec.ts"]
}