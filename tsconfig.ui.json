{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "declarationDir": "./build",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["./src/ui/**/*", "./src/services/**/*", "./src/electronAPI.d.ts", "./src/types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}